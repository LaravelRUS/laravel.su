{
    "name": "laravelrus/laravel.su",
    "description": "The Laravel Framework Translation Website",
    "keywords": [
        "laravelrus",
        "laravel.su"
    ],
    "license": "MIT",
    "type": "project",
    "repositories": [
        {"type": "path", "url": "libs/content-renderer"},
        {"type": "path", "url": "libs/github"}
    ],
    "require": {
        "php": "^8.2",
        "local/github": "*",
        "local/content-renderer": "*",
        "beberlei/doctrineextensions": "^1.3",
        "doctrine/inflector": "^2.0",
        "fruitcake/laravel-cors": "^3.0",
        "guzzlehttp/guzzle": "^7.5",
        "happyr/doctrine-specification": "^2.0",
        "laravel-doctrine/orm": "^1.8",
        "laravel/framework": "^9.46",
        "predis/predis": "^1.1|^2.0",
        "laravel/tinker": "^2.7",
        "sentry/sentry-laravel": "^2.12|^3.1"
    },
    "replace": {
        "symfony/polyfill-ctype": "*",
        "symfony/polyfill-php72": "*",
        "symfony/polyfill-php80": "*",
        "symfony/polyfill-php81": "*",
        "symfony/polyfill-mbstring": "*"
    },
    "autoload": {
        "psr-4": {
            "App\\": "app"
        }
    },
    "require-dev": {
        "barryvdh/laravel-ide-helper": "^2.12",
        "spatie/laravel-ignition": "^1.6",
        "fruitcake/laravel-telescope-toolbar": "^1.3",
        "fakerphp/faker": "^1.21",
        "laravel/telescope": "^4.11",
        "mockery/mockery": "^1.5",
        "nunomaduro/collision": "^6.4",
        "phpunit/phpunit": "^9.5",
        "squizlabs/php_codesniffer": "^3.7",
        "vimeo/psalm": "^5.4",
        "weirdan/doctrine-psalm-plugin": "^2.8"
    },
    "autoload-dev": {
        "psr-4": {
            "Tests\\": "tests",
            "Database\\Factories\\": "database/factories",
            "Database\\Seeders\\": "database/seeds",
            "App\\GitHub\\Tests\\": "libs/github/tests",
            "App\\ContentRenderer\\Tests\\": "libs/content-renderer/tests"
        }
    },
    "scripts": {
        "post-autoload-dump": [
            "Illuminate\\Foundation\\ComposerScripts::postAutoloadDump",
            "@php artisan package:discover --ansi"
        ],
        "post-update-cmd": [
            "@php artisan vendor:publish --tag=laravel-assets --ansi --force"
        ],
        "post-root-package-install": [
            "@php -r \"file_exists('.env') || copy('.env.example', '.env');\""
        ],
        "post-create-project-cmd": [
            "@php artisan key:generate --ansi"
        ],
        "psalm": "psalm --no-cache",
        "phpcs": "phpcs --standard=PSR12 --colors --encoding=utf-8 --extensions=php app src tests -p",
        "phpcbf": "phpcbf -s --colors --standard=PSR12 --encoding=utf-8 --extensions=php app src tests"
    },
    "config": {
        "optimize-autoloader": true,
        "preferred-install": "dist",
        "sort-packages": true,
        "allow-plugins": {
            "composer/package-versions-deprecated": true
        }
    },
    "extra": {
        "laravel": {
            "dont-discover": []
        },
        "branch-alias": {
            "dev-master": "2.x-dev",
            "dev-main": "2.x-dev"
        }
    },
    "minimum-stability": "dev",
    "prefer-stable": true
}
