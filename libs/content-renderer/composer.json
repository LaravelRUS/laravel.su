{
    "name": "local/content-renderer",
    "license": "MIT",
    "type": "library",
    "description": "Content polymorphic renderer",
    "authors": [
        {
            "name": "Kirill Nesmeyanov",
            "email": "nesk@xakep.ru"
        }
    ],
    "require": {
        "php": "^8.1",
        "ext-simplexml": "*",
        "league/commonmark": "^2.3",
        "scrivo/highlight.php": "^9.18.1.9",
        "spatie/commonmark-highlighter": "^3.0"
    },
    "autoload": {
        "psr-4": {
            "App\\ContentRenderer\\": "src"
        },
        "files": [
            "resources/lang-patch.php"
        ]
    },
    "require-dev": {
        "phpunit/phpunit": "^9.5"
    },
    "autoload-dev": {
        "psr-4": {
            "App\\ContentRenderer\\Tests\\": "tests"
        }
    },
    "extra": {
        "branch-alias": {
            "dev-master": "1.x-dev",
            "dev-main": "1.x-dev"
        }
    },
    "config": {
        "sort-packages": true
    },
    "minimum-stability": "dev",
    "prefer-stable": true
}
